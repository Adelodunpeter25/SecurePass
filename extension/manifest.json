{
  "manifest_version": 3,
  "name": "SecurePass",
  "version": "1.0",
  "description": "Secure password manager with auto-fill",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "SecurePass"
  }
}
